<TemplatedDialog Show="ShowTheAlert" ChildCssClass="alert-dialog">
    <div class="form-group row mt-3">
        <div class="col-12 text-center">
            <h3>@AlertDescription</h3>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 text-right">
            <button class="btn btn-danger mr-2" @onclick="Button1Pressed">@Button1Label</button>
        </div>
        <div class="col-6 text-left">
            <button class="btn btn-success ml-2" @onclick="Button2Pressed">@Button2Label</button>
        </div>
    </div>
</TemplatedDialog>


@code {
    [Parameter]
    public string AlertDescription { get; set; }
    [Parameter]
    public bool ShowTheAlert { get; set; }
    [Parameter]
    public EventCallback Button1Pressed { get; set; }
    [Parameter]
    public EventCallback Button2Pressed { get; set; }
    [Parameter]
    public string Button1Label { get; set; }
    [Parameter]
    public string Button2Label { get; set; }

}
